// This file contains code to read temperature sensor data and display the temperature on serial monitor

const int tempPin = A0; // LM35 connected to analog pin A0

void setup() {
  Serial.begin(9600);
  Serial.println("Reading temperature from LM35...");
}

void loop() {
  int analogValue = analogRead(tempPin);
  float voltage = analogValue * (5.0 / 1023.0);  // Convert to volts
  float temperatureC = voltage * 100.0;          // LM35 gives 10mV per °C

  Serial.print("Temperature: ");
  Serial.print(temperatureC);
  Serial.println(" °C");

  delay(1000); // Wait 1 second before next reading
}
